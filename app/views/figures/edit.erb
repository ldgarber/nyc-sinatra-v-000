<h1>Edit figure <%=@figure.name%></h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <p>Figure Name:<input type="text" name="figure[name]" id="figure_name"></input></p>

  <p>Select Title(s): </p>
  <% @titles.each do |t| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=t.id%>" value="<%=t.id%>" <%='checked' if @figure.titles.include?(t) %>><%=t.name%></input>  
  <%end%>
  <p>Or, create a new title: </p>
  <input type="text" name="title[name]" id="new_title"></input>

  <p>Select a Landmark: </p>
  <% @landmarks.each do |l| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=l.id%>" value="<%=l.id%>" <%='checked' if @figure.landmarks.include?(l) %>><%=l.name%></input>
  <%end%>

  <p> Or, create a new landmark: </p>
  <input type="text" id="landmark[name]" name="new_landmark"></input>
  
  <input type="submit" value="Edit Figure"></input>
</form>
